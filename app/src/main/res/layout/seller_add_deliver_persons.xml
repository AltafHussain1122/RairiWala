<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.altaf.rairiwala.RairriWalaManagment.Seller_Add_Deliver_Persons">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main"
        android:layout_margin="20dp"

        android:background="@color/white">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Add Delivery Person"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/dp_sign_up_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/name"
                android:ems="10"
                android:hint="@string/enterusername"
                android:inputType="textPersonName"
                android:textColorHint="@color/red" />

            <EditText
                android:id="@+id/dp_sign_up_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/phone"
                android:ems="10"
                android:hint="3400456762"
                android:inputType="number"
                android:textColorHint="@color/red" />

            <EditText
                android:id="@+id/dp_sign_up_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/password"
                android:ems="10"
                android:hint="@string/enterpin"
                android:inputType="numberPassword"
                android:textColorHint="@color/red" />

            <Button
                android:id="@+id/dp_signup_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/rounded_widgets"
                android:fontFamily="sans-serif"
                android:text="Add Delivery Person"
                android:textColor="@color/white" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
