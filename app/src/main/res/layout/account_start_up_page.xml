<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home"
    tools:context="com.example.altaf.rairiwala.AccountManagment.AppStartUpPage">


    <Button
        android:id="@+id/join_as_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/rounded_widgets"
        android:text="Join As Customer"
        android:textColor="@color/white"
        android:textSize="17dp" />

    <Button
        android:id="@+id/join_as_vendor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/join_as_customer"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_widgets"
        android:text="Join As Vendor"
        android:textColor="@color/white"
        android:textSize="17dp" />
</RelativeLayout>
